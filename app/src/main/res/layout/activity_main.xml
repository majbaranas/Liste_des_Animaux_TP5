<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Titre de l'application -->
    <TextView
        android:layout_marginTop="38dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liste des Animaux"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#274E27"
        android:padding="16dp"
        android:gravity="center"
        android:elevation="4dp" />

    <!-- RadioGroup pour le choix d'affichage -->
    <RadioGroup
        android:id="@+id/radioGroupAffichage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <RadioButton
            android:id="@+id/radioLineaire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linéaire"
            android:checked="true"
            android:layout_marginEnd="24dp" />

        <RadioButton
            android:id="@+id/radioGrille"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grille" />

    </RadioGroup>

    <!-- Ligne de séparation -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <!-- RecyclerView pour afficher la liste -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAnimaux"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

</LinearLayout>